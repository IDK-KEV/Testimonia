        let favorites = []; // Lijst met favorieten

        function rearrangeTable() {
            const tableBody = document.querySelector('tbody');
            const rows = Array.from(tableBody.querySelectorAll('tr'));

            const sortedRows = rows.sort((a, b) => {
                const idA = parseInt(a.querySelector('td:first-child').innerText);
                const idB = parseInt(b.querySelector('td:first-child').innerText);
                const aIsFavorite = favorites.includes(idA);
                const bIsFavorite = favorites.includes(idB);

                if (aIsFavorite && !bIsFavorite) {
                    return -1; // A naar boven verplaatsen als het favoriet is en B niet
                } else if (!aIsFavorite && bIsFavorite) {
                    return 1; // B naar boven verplaatsen als het favoriet is en A niet
                } else {
                    return 0; // Geen verplaatsing als beide of geen van beide favoriet zijn
                }
            });

            // Vernieuw de tabelinhoud met de gesorteerde rijen
            tableBody.innerHTML = '';
            sortedRows.forEach(row => {
                tableBody.appendChild(row);
            });
        }

        function toggleFavorite(comakerID) {
            const index = favorites.indexOf(comakerID);
            const button = document.querySelector(`button[data-id="${comakerID}"]`);
            console.log('Toggle favoriet voor ID:', comakerID);


            if (index === -1) {
                favorites.push(comakerID); // Toevoegen aan favorieten als het nog niet favoriet is
                button.classList.add('button-favorite'); // Voeg de klasse toe aan de knop
            } else {
                favorites.splice(index, 1); // Verwijderen als het al favoriet is
                button.classList.remove('button-favorite'); // Verwijder de klasse van de knop
            }
            console.log("Favorieten: ", favorites); // Toon favorieten in console (kan worden verwijderd in productie)
            rearrangeTable(); // Tabel opnieuw ordenen op basis van favorieten
        }
            // Voeg een eventlistener toe aan elk element met de data-id attribuut
            document.querySelectorAll('[data-id]').forEach(button => {
                button.addEventListener('click', function() {
                    const comakerID = this.getAttribute('data-id'); // Haal de ID op van het element waarop geklikt is
                    toggleFavorite(comakerID); // Toggle de favorietstatus van deze CoMaker
                    toggleFavoriteOnServer(comakerID); // Stuur de favorietstatus naar de server
                });
            });

            // Stuur de favorietstatus naar de server via een fetch request
            function toggleFavoriteOnServer(comakerID) {
                fetch(`http://localhost:3000/toggleFavorite`, {
                    method: 'POST',
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    // Vernieuw de pagina of update de favorieten dynamisch zonder de pagina te vernieuwen
                    window.location.reload(); // Vernieuw de pagina na het toggelen van de favoriet
                })
                .catch(error => {
                    console.error('There was a problem toggling the favorite status:', error);
                    // Handel de fout af, geef een melding weer, etc.
                });
            }

    </script>
