<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">

  <%- include("PartialsAdmin/sidenav.ejs") %>

  <style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .main {
        margin: 0 20px 20px 20px; /* Adjusted margin for the .main div */
    }

    h1 {
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 0px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #060606;
        color: #fff;
    }

    tbody tr:hover {
        background-color: #f5f5f5;
    }

    p {
        color: #555;
        margin-top: 20px;
    }

</style>
</head>
<body>
    <%- include("PartialsAdmin/sidenav.ejs") %>
<!-- Include your navigation or any other components here -->

<div class="main">


    <% 
    if (arrayLogs && arrayLogs.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Type</th>
                    <!-- Add more columns if needed -->
                </tr>
            </thead>
            <tbody>
                <% arrayLogs.forEach(function(log, index) { %>
                    <tr>
                        <td><%= log.LogID %></td>
                        <td><%= log.DescriptionLog %></td>
                        <td><%= log.Type %></td>
                        <!-- Add more cells based on your logs structure -->
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No logs available.</p>
    <% } %>

</div>
</body>
</html>
